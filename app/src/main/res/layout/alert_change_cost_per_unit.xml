<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/appliance_change_cost_per_unit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff000000" />

    <EditText
        android:id="@+id/editTextApplianceCostPerUnitElectricity"
        android:background="@drawable/rounded_edit_text"
        android:layout_width="fill_parent"
        android:inputType="number"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:padding="5dp">

        <requestFocus />
    </EditText>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button android:id="@+id/button_AL_alert_Cancel"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:text="CALL"
            android:layout_weight="0.5"
            android:background="#FFF"
            android:textColor="#843F2B" />

        <Button android:id="@+id/button_AL_alert_Save"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:text="Details"
            android:background="#FFF"
            android:textColor="#843F2B"
            android:layout_weight="0.5" />
    </LinearLayout>

</LinearLayout>