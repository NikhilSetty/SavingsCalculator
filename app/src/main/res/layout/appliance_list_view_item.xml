<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/textViewApplianceApplianceName"
            android:text="Appliance Name"
            android:layout_margin="3dp"
            android:textSize="30sp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textViewApplianceWattage"
                    android:textSize="15sp"
                    android:text="Wattage"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textViewApplianceActiveHours"
                    android:textSize="15sp"
                    android:layout_margin="2dp"
                    android:text="Active Hours"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textViewApplianceCostPerDay"
                    android:layout_margin="2dp"
                    android:textSize="15sp"
                    android:text="Cost Per Day"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Cost Per Month"
                    android:layout_margin="2dp"
                    android:id="@+id/textViewApplianceCostAfterInstallingSensorPerDay"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textViewApplianceQuantity"
                    android:textSize="15sp"
                    android:layout_margin="2dp"
                    android:text="Quantity"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textViewApplianceWorkingHours"
                    android:textSize="15sp"
                    android:layout_margin="2dp"
                    android:text="Working Hours"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textViewApplianceCostPerMonth"
                    android:textSize="15sp"
                    android:layout_margin="2dp"
                    android:text="Cost Per day"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textViewApplianceCostAfterInstallingSensorPerMonth"
                    android:textSize="15sp"
                    android:layout_margin="2dp"
                    android:text="Cost Per Month"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="right"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Savings :"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="2434"
            android:layout_margin="2dp"
            android:id="@+id/textViewApplianceTotalSavings"/>

    </LinearLayout>

</LinearLayout>